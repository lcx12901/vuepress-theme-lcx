{
  "name": "vuepress-theme-lcx-root",
  "version": "1.0.0-beta2.0",
  "main": "index.js",
  "author": "lcx12901",
  "license": "MIT",
  "private": true,
  "description": "🐍 A configurable VuePress theme site | 一款可配置的VuePress主题.",
  "workspaces": [
    "demo/*",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm build:all && pnpm build:copy",
    "build:all": "pnpm -r --stream build",
    "build:copy": "pnpm --parallel --stream copy",
    "build:tsc": "tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "pnpm --parallel --stream clean",
    "commit": "git add . && git-cz",
    "dev": "pnpm build:all --watch & pnpm build:copy --watch & pnpm example:dev",
    "docs:build": "vuepress build docs",
    "docs:deploy": "bash scripts/docs-deploy.sh",
    "docs:dev": "pnpm build:tsc --watch & pnpm build:copy --watch & vuepress dev docs",
    "example:build": "vuepress build example",
    "example:dev": "DEBUG=vuepress* vuepress dev example",
    "lint": "eslint --ext .js,.ts,.vue .",
    "release": "pnpm build && bash scripts/release.sh",
    "release:pre": "pnpm build && bash scripts/pre-release.sh",
    "update": "pnpm up --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "keywords": [
    "vuepress-theme",
    "vuepress-theme-lcx",
    "blog-theme",
    "vue",
    "vuepress"
  ],
  "repository": {
    "type": "git",
    "url": "lcx12901/vuepress-theme-lcx"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0",
    "npm": ">=8",
    "pnpm": ">=7"
  },
  "bugs": {
    "url": "https://github.com/lcx12901/vuepress-theme-lcx/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/events": "^3.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^17.0.45",
    "@types/unist": "^2.0.6",
    "@types/vfile": "^4.0.0",
    "@vuepress/client": "2.0.0-beta.60",
    "commitizen": "^4.2.6",
    "concurrently": "^6.5.1",
    "conventional-changelog-cli": "^2.2.2",
    "cpx": "^1.5.0",
    "cz-customizable": "^6.9.2",
    "eslint": "^7.32.0",
    "eslint-config-vuepress": "^3.10.0",
    "eslint-config-vuepress-typescript": "^2.9.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "md5": "2.3.0",
    "md5-es": "1.8.2",
    "prettier": "^2.8.2",
    "prettier-config-vuepress": "^1.4.0",
    "rimraf": "3.0.2",
    "sort-package-json": "^1.57.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^26.5.6",
    "typescript": "4.8.2",
    "vue": "^3.2.45",
    "vuepress": "2.0.0-beta.60"
  }
}
